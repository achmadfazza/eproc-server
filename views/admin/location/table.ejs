<table id="example2" class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>Nama Lokasi</th>
    <th>Aksi</th>
  </tr>
  </thead>
  <tbody>
  <% for(let i=0;i < location.length; i++){%>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= location[i].name %></td>
      <td>
        <form action="/location/delete/<%= location[i]._id %>?_method=DELETE"
          method="POST">
          <a href="/location/edit/<%= location[i]._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>Ubah</a>
          <button class="btn btn-danger">
            <i class="fa fa-trash"></i>Hapus</button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>